<%- include('partials/header', { title: "Profile" }) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');

  body {
    font-family: 'Inter', sans-serif;
    background: #f5f7ff;
    color: #2d3748;
  }
.profile-container {
  width: 100%;
  margin: 2rem auto 3rem !important;
  padding: 0 2rem !important; 
}


  
  .welcome-card {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 1.5rem;
    color: white;
    padding: 2.5rem 3rem;
    box-shadow: 0 20px 40px rgba(102, 126, 234, 0.4);
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .welcome-text {
    flex: 1 1 300px;
  }

  .welcome-text h1 {
    font-size: 2.75rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
    line-height: 1.1;
  }

  .welcome-text p {
    font-size: 1.25rem;
    font-weight: 500;
    opacity: 0.9;
  }

  .profile-avatar {
    flex-shrink: 0;
    width: 140px;
    height: 140px;
    border-radius: 50%;
    border: 5px solid rgba(255 255 255 / 0.6);
    object-fit: cover;
    box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    background: white;
  }

  
  .user-details-card {
    background: white;
    border-radius: 1.25rem;
    box-shadow: 0 15px 30px rgba(0,0,0,0.07);
    padding: 2rem 2.5rem;
    margin-bottom: 4rem;
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    align-items: center;
  }

  .user-info {
    flex: 1 1 300px;
  }

  .user-info h2 {
    font-weight: 700;
    font-size: 1.75rem;
    margin-bottom: 0.25rem;
    color: #2d3748;
  }

  .user-info p {
    font-size: 1rem;
    color: #4a5568;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .user-info p i {
    font-size: 1.2rem;
    color: #667eea;
  }

 
  .blogs-section h3 {
    font-weight: 700;
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
    color: #2d3748;
  }

  .table-wrapper {
    overflow-x: auto;
    border-radius: 1rem;
    box-shadow: 0 15px 30px rgba(0,0,0,0.07);
    background: white;
  }

  table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    min-width: 720px;
  }

  thead tr {
    background: #667eea;
    color: white;
    font-weight: 600;
    font-size: 1rem;
  }

  thead th {
    padding: 1rem 1.25rem;
    text-align: left;
    position: sticky;
    top: 0;
    z-index: 2;
  }

  tbody tr {
    border-bottom: 1px solid #e2e8f0;
    transition: background-color 0.3s ease;
  }

  tbody tr:hover {
    background-color: #f0f4ff;
  }

  tbody td {
    padding: 1rem 1.25rem;
    vertical-align: middle;
    font-size: 0.95rem;
    color: #4a5568;
  }

  tbody td img {
    border-radius: 0.75rem;
    width: 80px;
    height: 60px;
    object-fit: cover;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  }

  
  .content-preview {
    max-width: 280px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

 
  .btn-edit, .btn-delete {
    font-size: 0.85rem;
    padding: 0.35rem 0.75rem;
    border-radius: 0.5rem;
    font-weight: 600;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
    display: inline-block;
    margin-bottom: 0.25rem;
    width: 70px;
    text-align: center;
  }

  .btn-edit {
    background-color: #f6ad55;
    color: #744210;
  }

  .btn-edit:hover {
    background-color: #ed8936;
    color: white;
  }

  .btn-delete {
    background-color: #fc8181;
    color: #742a2a;
  }

  .btn-delete:hover {
    background-color: #f56565;
    color: white;
  }

  @media (max-width: 768px) {
    .welcome-card {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }

    .user-details-card {
      flex-direction: column;
      text-align: center;
    }

    .user-info p {
      justify-content: center;
    }

    table {
      min-width: 100%;
    }
  }
</style>

<div class="container-fluid profile-container ">


  <section class="welcome-card" role="region" aria-label="Welcome message">
    <img 
      src="<%= user.avatar || 'https://via.placeholder.com/140' %>" 
      alt="Profile picture of <%= user.name %>" 
      class="profile-avatar" 
      loading="lazy"
      width="140" height="140"
    />
    <div class="welcome-text">
      <h1>Welcome back, <%= user.name.split(' ')[0] %>! ðŸ‘‹</h1>
      <p>Hope youâ€™re having a wonderful day. Keep sharing your amazing stories with the world.</p>
    </div>
  </section>


  <section class="user-details-card" role="region" aria-label="User  details">
    <div class="user-info">
      <h2><%= user.name %></h2>
      <p><i class="bi bi-envelope"></i> <a href="mailto:<%= user.email %>" class="text-indigo-600 hover:underline"><%= user.email %></a></p>
      <p><strong>Joined:</strong> <time datetime="<%= user.createdAt.toISOString() %>"><%= new Date(user.createdAt).toLocaleDateString(undefined, { year: 'numeric', month: 'long', day: 'numeric' }) %></time></p>
      <% if(user.bio) { %>
        <p><strong>About Me:</strong> <%= user.bio %></p>
      <% } %>
    </div>
  </section>

  <section class="blogs-section" role="region" aria-label="User  blogs">
    <h3>Your Blogs</h3>

    <% if (blogs && blogs.length > 0) { %>
      <div class="table-wrapper" tabindex="0" aria-describedby="blogsTableDesc">
        <table aria-describedby="blogsTableDesc" role="table">
          <caption id="blogsTableDesc" class="visually-hidden">List of blogs created by the user</caption>
          <thead>
            <tr>
              <th scope="col">Title</th>
              <th scope="col">Content Preview</th>
              <th scope="col">Image</th>
              <th scope="col">Created At</th>
              <th scope="col">Updated At</th>
              <th scope="col" style="min-width: 130px;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% blogs.forEach(blog => { %>
              <tr>
                <td><%= blog.title %></td>
                <td class="content-preview" title="<%= blog.content.replace(/"/g, '&quot;') %>">
                  <%= blog.content.length > 100 ? blog.content.substring(0, 100) + "..." : blog.content %>
                </td>
                <td>
                  <% if(blog.image) { %>
                    <img src="<%= blog.image %>" alt="Image for blog titled <%= blog.title %>" loading="lazy" width="80" height="60" />
                  <% } else { %>
                    <span style="color:#a0aec0;">N/A</span>
                  <% } %>
                </td>
                <td><time datetime="<%= blog.createdAt.toISOString() %>"><%= new Date(blog.createdAt).toLocaleDateString() %></time></td>
                <td><time datetime="<%= blog.updatedAt.toISOString() %>"><%= new Date(blog.updatedAt).toLocaleDateString() %></time></td>
                <td>
                  <a href="/blogs/edit/<%= blog._id %>" class="btn-edit" aria-label="Edit blog titled <%= blog.title %>">Edit</a>
                  <form action="/blogs/delete/<%= blog._id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this blog?');" style="display:inline-block;">
                    <button type="submit" class="btn-delete" aria-label="Delete blog titled <%= blog.title %>">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p style="font-size:1.125rem; color:#718096;">You haven't created any blogs yet. Start sharing your stories!</p>
    <% } %>
  </section>
</div>

<style>
  .visually-hidden { 
    position: absolute !important; 
    height: 1px; width: 1px; 
    overflow: hidden; 
    clip: rect(1px, 1px, 1px, 1px); 
    white-space: nowrap; 
  }
</style>

<%- include('partials/footer') %>